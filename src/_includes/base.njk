<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ description or 'Kadir Gülec - Software Developer Portfolio' }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://kadirguelec.de/{{ page.url }}">

    {% if robots %}
            <meta name="robots" content="{{ robots }}">
    {% endif %}

    <link rel="icon" type="image/svg+xml" href="/assets/logo.svg">
    <title>{{ title }}</title>

    <meta name="description" content="{{ description or 'Kadir Gülec - Software Developer Portfolio' }}">
     <script>
        // Check local storage or system preference
        if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark')
        }
    </script>

    <!-- Tailwind CSS Output -->
    <link rel="stylesheet" href="/style.css">
    <!-- Link to the Splide CSS file -->
    <link rel="stylesheet" href="/assets/libs/splide.min.css">
    <!-- Alpine.js -->
    <script defer src="/assets/libs/alpine.min.js"></script>
</head>
<body class="bg-white dark:bg-gray-900 min-h-screen">
  <!-- Header -->
    {% include "header.njk" %}
  <main class="isolate">
    {{ content | safe }}
  </main>

  <!-- Footer -->
  {% include "footer.njk" %}

<!-- Splide JS (Local) -->
<script src="/assets/libs/splide.min.js"></script>
</body>
</html>