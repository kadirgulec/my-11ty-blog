<div class="mx-auto mt-32 max-w-7xl px-6 sm:mt-48 lg:px-8 mb-24">
  <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl dark:text-white">Certificates</h2>
      <a href="/certificates/" class="button-a">
          View all
      </a>
  </div>

  <!-- Splide Container -->
  <section id="cert-slider" class="splide" aria-label="Certificates Slider">
    <div class="splide__track py-4">
      <ul class="splide__list">

        {% for cert in certificates %}
          {% if cert.featured %}
            <li class="splide__slide">
                <!-- Card Design -->
                <div class="flex h-full flex-col justify-between rounded-2xl border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-700 dark:bg-gray-800 mx-2">

                    <div>
                        <div class="flex items-center gap-x-4 mb-4">
                            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-indigo-50 dark:bg-indigo-900/30 text-2xl">
                                {% if cert.logo != null %}
                                <img src="{{ cert.logo }}" alt="{{ cert.name }} Logo" class="h-full w-full object-contain"/>

                                {% else %} ðŸ“œ {% endif %}
                            </div>
                            <div>
                                <div class="text-xs text-gray-500 dark:text-gray-400">{{ cert.issuer }}</div>
                                <div class="text-xs text-gray-400">{{ cert.date }}</div>
                            </div>
                        </div>

                        <h3 class="text-lg font-semibold leading-6 text-gray-900 dark:text-white">
                            {{ cert.name }}
                        </h3>
                    </div>
                        {% if cert.url and cert.url != '#' %}

                    <div class="mt-6 pt-4 border-t border-gray-100 dark:border-gray-700">
                            <a href="{{ cert.url }}" target="_blank" class="button-a">Verify Credential</a>
                    </div>
                        {% endif %}

                </div>
            </li>
          {% endif %}
        {% endfor %}

      </ul>
    </div>
  </section>

  <!-- Initialize Splide -->
  <script>
    document.addEventListener( 'DOMContentLoaded', function() {
      new Splide( '#cert-slider', {
        type   : 'loop',       // Infinite loop
        perPage: 3,            // Show 3 cards
        perMove: 1,            // Move 1 at a time
        gap    : '1rem',       // Space between slides
        pagination: true,      // Show dots
        arrows: true,          // Show arrows

        // Responsive Breakpoints
        breakpoints: {
          1024: {
            perPage: 2,
          },
          640: {
            perPage: 1,
            padding: '1rem', // Shows a peek of the next slide on mobile
          },
        }
      } ).mount();
    } );
  </script>
</div>