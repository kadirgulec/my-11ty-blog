---
layout: base.njk
title: Blog
pagination:
  data: collections.post
  size: 6
  alias: posts
  reverse: true
---

<div class="mx-auto mt-32 max-w-7xl px-6 lg:px-8">
  <div class="mx-auto lg:mx-0">

    <!-- Header -->
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl dark:text-white">From the blog</h2>
      <p class="mt-2 text-lg leading-8 text-gray-600 dark:text-gray-400">
        Technical tutorials, career advice, and project updates.
      </p>
    </div>

    <!-- Grid of Posts -->
    <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      {% for post in posts %}
        <article class="flex flex-col items-start justify-between">
          <div class="relative w-full">
            <!-- Random tech image for visual appeal -->
            <img src="https://images.unsplash.com/photo-1496128858413-b36217c2ce36?ixlib=rb-4.0.3&auto=format&fit=crop&w=3603&q=80" alt="" class="aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]">
            <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
          </div>
          <div class="max-w-xl">
            <div class="mt-8 flex items-center gap-x-4 text-xs">
              <time datetime="{{ post.date }}" class="text-gray-500">{{ post.date | postDate }}</time>

              <!-- First Tag Display -->
              {% for tag in post.data.tags %}
                {% if tag != "post" %}
                  <a href="/tags/{{ tag | slugify }}/" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">
                    {{ tag }}
                  </a>
                  <!-- Only show the first tag in the preview card to keep it clean -->
                {% endif %}
              {% endfor %}

            </div>
            <div class="group relative">
              <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                <a href="{{ post.url }}">
                  <span class="absolute inset-0"></span>
                  {{ post.data.title }}
                </a>
              </h3>
              <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
                {% if post.data.description %}
                  {{ post.data.description }}
                {% else %}
                  {{ post.templateContent | striptags | truncate(150) }}
                {% endif %}
              </p>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>

    <!-- Pagination Controls -->
    <div class="flex justify-center mt-12 gap-4">
        {% if pagination.href.previous %}
            <a href="{{ pagination.href.previous }}" class="px-4 py-2 border rounded hover:bg-gray-50">← Previous</a>
        {% endif %}
        {% if pagination.href.next %}
            <a href="{{ pagination.href.next }}" class="px-4 py-2 border rounded hover:bg-gray-50">Next →</a>
        {% endif %}
    </div>

  </div>
</div>