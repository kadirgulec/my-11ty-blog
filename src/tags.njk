---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: base.njk
permalink: /tags/{{ tag | slugify }}/
---

<div class="main-container">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2 class="text-3xl font-bold tracking-tight p-text sm:text-4xl">Tagged: <span class="text-indigo-600">{{ tag }}</span></h2>
      <p class="mt-6 text-lg leading-8 p-text">
        All posts related to {{ tag }}.
      </p>
      <div class="mt-4">
        <a href="/blog/" class="button-a">Back to all posts</a>
      </div>
    </div>

    <div class="mx-auto mt-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none">
      <div class="grid grid-cols-1 gap-x-8 gap-y-16 lg:grid-cols-3">
        {% set taglist = collections[ tag ] %}
        {% for post in taglist | reverse %}
          <article class="flex max-w-xl flex-col items-start justify-between">
            <div class="flex items-center gap-x-4 text-xs">
              <time datetime="{{ post.date }}" class="p-text">{{ post.date | postDate }}</time>
            </div>
            <div class="group relative">
              <h3 class="mt-3 text-lg font-semibold leading-6 p-text group-hover:text-gray-600">
                <a href="{{ post.url }}">
                  <span class="absolute inset-0"></span>
                  {{ post.data.title }}
                </a>
              </h3>
              <p class="mt-5 line-clamp-3 text-sm leading-6 p-text">
                 {{ post.templateContent | striptags | truncate(150) }}
              </p>
            </div>
          </article>
        {% endfor %}
      </div>
    </div>
  </div>
</div>